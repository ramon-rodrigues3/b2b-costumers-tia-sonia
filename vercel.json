{
  "version": 2,
  "builds": [
    {
      "src": "b2b/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "Python3.9"
      }
    }
  ],
  "buildCommand": "pip install -r requirements.txt && python3 manage.py collectstatic --noinput --clear",
  "outputDirectory": "staticfiles_build",
  "routes": [
    {
        "src": "/static/(.*)", 
        "dest": "staticfiles_build/static/$1" 
    },
    {
      "src": "/(.*)",
      "dest": "b2b/wsgi.py"
    }
  ]
}